@model ogrenciNotMvc.Models.EntityFramework.TableOgrenciler
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Öğrenci Adı</label>
        <input type="text" class="form-control" name="ogrAd" />
    </div>

    <div style="margin-top:10px">
        <label>Öğrenci Soyadı</label>
        <input type="text" class="form-control" name="ogrSoyad" />
    </div>


    <div style="margin-top:10px">
        <label>Öğrenci Cinsiyeti</label>
        <input type="text" class="form-control" name="ogrCinsiyet" />
    </div>

    <div style="margin-top:10px">
        <label>Öğrenci Kulüp</label>
        @Html.DropDownListFor(m => m.TableKulupler.kulupID, (List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})
    </div>

    <div style="margin-top:10px">
        <button class="alert">Öğrenci Ekle </button>
    </div>

</form>

